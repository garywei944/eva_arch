#!/bin/sh

export PATH=$HOME/bin:$HOME/.local/bin${PATH:+:${PATH}}
export LD_LIBRARY_PATH=/opt/cuda/lib64:$HOME/.local/lib${LD_LIBRARY_PATH:+:${LD_LIBRARY_PATH}}


export MANPATH="/usr/local/man${MANPATH:+:${MANPATH}}"


# SUDO
__t=$(sudo -nv 2>&1)
if [ $? -eq 0 ]; then
	:
elif [[ $__t == sudo* ]]; then
	:
else
	export NOSUDO=1
fi


# You may need to manually set your language environment
# export LANG=en_US.UTF-8


# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
	export EDITOR='vim'
else
	export EDITOR='subl'
fi


# Compilation flags
case $(uname -m) in
x86_64)
	export ARCHFLAGS="-arch x86_64"
	;;
i*86)
	export ARCHFLAGS="-arch i386"
	;;
*)
	;;
esac


# JAVA
if [ -z ${JAVA_HOME+x} ]; then
	if [ -d /usr/lib/jvm/default ]; then
	export JAVA_HOME=/usr/lib/jvm/default
	fi
fi


# GPG_TTY
export GPG_TTY="$(tty)"


# Cargo
if [[ $(command -v cargo) ]]; then
	export PATH=$PATH:$HOME/.cargo/bin
fi


# wine
if [ -n $(command -v wine) ]; then
	export WINEDEBUG=fixme-font
fi


# Custom environment variable
export EVA="ariseus"
