[includeIf "gitdir:~/byted/"]
	path = ~/.byted.gitconfig
[core]
	editor = vim
	autocrlf = input
	pager = delta
[interactive]
	diffFilter = delta --color-only
[alias]
    empty = "git commit --allow-empty"

# Git commands
[commit]
	gpgsign = true
[diff]
	colorMoved = default
[fetch]
	prune = true
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3
[status]
	short = true

# Tools
[delta]
	navigate = true
[gpg]
	program = gpg
